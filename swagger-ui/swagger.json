              "type": "string"
            }
          },
          {
            "x-go-name": "DisplayName",
            "description": "the pretty name or nickname of the new user",
            "name": "display_name",
            "in": "body",
            "schema": {
              "type": "string"
            }
          },
          {
            "uniqueItems": true,
            "x-go-name": "Email",
            "description": "the email of the new user",
            "name": "email",
            "in": "body",
            "schema": {
              "type": "string"
            }
          },
          {
            "x-go-name": "Password",
            "description": "the password of the new user",
            "name": "password",
            "in": "body",
