              "type": "string"
            }
          },
          {
            "x-go-name": "Description",
            "description": "a brief self-description of the user",
            "name": "description",
            "in": "body",
            "schema": {
              "type": "string"
            }
          },
          {
            "x-go-name": "IconURL",
            "description": "a URL pointing to the user's icon",
            "name": "icon_url",
            "in": "body",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/models.User"
          },
          "default": {
            "$ref": "#/responses/errorResponse"
          }
        }
      }
    },
    "/api/v1/user/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Gets info for a user.",
        "operationId": "GetUser",
        "parameters": [
          {
            "uniqueItems": true,
            "type": "integer",
            "format": "int64",
            "x-go-name": "ID",
            "description": "the ID of the user",
            "name": "id",
